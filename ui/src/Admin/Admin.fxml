            <ColumnConstraints hgrow="SOMETIMES" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="20.0" />
            <ColumnConstraints hgrow="SOMETIMES" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="10.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints valignment="CENTER" vgrow="SOMETIMES" />
          <RowConstraints valignment="TOP" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Label text="Select Stock" GridPane.columnIndex="1" />
            <Label text="Buys List" GridPane.columnIndex="3" />
            <Label text="Sells List" GridPane.columnIndex="5" />
            <Label text="Deals History" GridPane.columnIndex="7" />
            <ChoiceBox fx:id="stockChoiceBox" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <ScrollBar fx:id="buyScrollPane" orientation="VERTICAL" GridPane.columnIndex="3" GridPane.halignment="RIGHT" GridPane.rowIndex="1" />
