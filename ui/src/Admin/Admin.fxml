               <content>
                  <Label fx:id="buyLabel" text="Label" />
               </content>
            </ScrollPane>
            <ScrollPane prefHeight="200.0" prefWidth="200.0" GridPane.columnIndex="5" GridPane.rowIndex="1">
               <content>
                  <Label fx:id="sellLabel" text="Label" />
               </content>
            </ScrollPane>
            <ScrollPane prefHeight="200.0" prefWidth="200.0" GridPane.columnIndex="7" GridPane.rowIndex="1">
               <content>
                  <Label fx:id="dealLabel" text="Label" />
               </content>
            </ScrollPane>
         </children>
      </GridPane>
   </content>
</ScrollPane>
